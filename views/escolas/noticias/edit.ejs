<%- include ('../../partials/head')%>
<%- include ('../../partials/menu')%>

    <div id="container-publish-school">
        <form action="/escola/<%=escola._id%>/noticia?_method_PUT" method="post">
            <div id="content-publish-school">
                <h1>Edite sua noticia!</h1>
                <div class="item-notice-form">
                    <label>Título
                        <input type="text" name="titulo" id="titulo" value=<%=escola.noticias.titulo%>>
                    </label>
                    <label>Descrição:
                        <textarea name="descricao" value=<%=escola.noticias.descricao%>></textarea>
                    </label>
                    <label>Data de publicação:
                        <input type="date" name="data_post" id="data_post" value=<%=escola.noticias.data_post%>>
                    </label>
                </div>
                <button>Editar notícia</button>
            </div>
        </form>
    </div>
<%- include ('../../partials/footer')%>