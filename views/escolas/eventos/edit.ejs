<%- include ('../../partials/head')%>
<%- include ('../../partials/menu')%>
<div id="container-publish-school">
    <form action="/escola/<%=escola._id%>/evento/<%=escola.eventos._id%>?_method=PUT" method="POST">
    <div id="content-publish-school">
      <h1>Edite seu evento!</h1>
        <div id="new-event-form">
            <div class="field-event-form">
                <label for="nome_evento">Nome do evento
                    <input type="text" name="nome_evento" id="nome_evento" placeholder="Nome do seu evento" value="<%=evento.nome_evento%>">
                </label>
            </div>
            <div class="field-event-form">
                <label for="descricao">Descrição:
                    <input type="text" name="descricao" id="descricao" placeholder="Descrição do seu evento" value="<%=evento.descricao%>">
                </label>
            </div>
            <div class="field-event-form">
                <label for="endereco">Endereço:
                  <input type="text" name="endereco" id="endereco" placeholder="Seu endereço" value="<%=evento.endereco%>">
                </label>
            </div>
            <div class="field-event-form">
                <label for="data_inicio">Data de início do evento:
                    <input type="date" name="data_inicio" id="data_inicio" value=<%=evento.data_inicio%>>
                </label>
            </div>
            <div class="field-event-form">
                <label for="data_fim">Data do fim do evento:
                    <input type="date" name="data_fim" id="data_fim" value=<%=evento.data_fim%>>
                </label>
            </div>
            <div class="field-event-form">
                <label for="hora_inicio">Horário inicial:
                    <input type="time" name="hora_inicio" id="hora_inicio" value=<%=evento.hora_inicio%>>
                </label>
            </div>
            <div class="field-event-form">
                <label for="hora_fim">Horário final:
                    <input type="time" name="hora_fim" id="hora_fim" value=<%=evento.hora_fim%>>
                </label>
            </div>
        
        </div>
        <button>Publicar evento</button> 
  </form>

</div>

<%- include ('../../partials/footer')%>
