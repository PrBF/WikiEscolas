<%- include ('../partials/head')%>
<div id="adm">
    <div id="container">
        <h1>Novas denúncias</h1>
        <div class="content">
            <% if (data.length == 0) {%>
                <h4 id="denuncia-message">Nada para ver por aqui :)</h4>
            <%} else  {%>
                <table id="adm-table">
                    <tr>
                        <th>ID da Escola</th>
                        <th>Nome da Escola</th>
                        <th>Data da denúncia</th>
                        <th>Analisado</th>
                        <th>Excluir</th>
                    </tr>
                
                    <div id="info">
                        <% for (denuncia of data){%>
                            <% for (field of denuncia.denuncias) {%>
                            <tr> 
                                <td><%=field.id_escola%></td>
                                <td><%=field.nome_escola%></td>
                                <td><%=field.data_denuncia%></td>
                                <form action="/administrador/analisa/<%=field.id_escola%>/<%=field._id%>?_method=DELETE" method="POST">

                                    <td><input type="checkbox" name="analisado" id="analisado" onclick="submit()"></td>  
                                </form>
                                <td>
                                    <form action="/administrador/remove/<%=field.id_escola%>?_method=DELETE" method="post" onClick="return confirm('Você tem certeza que deseja excluir essa escola?')">
                                        <button ><i  data-feather="trash-2"></i></button>
                                    </form>
                                </td> 
                            </tr>
                            <%}%>
                        <%}%>
                        
                    </div>
                </table>
            <%}%>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %>